<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Note">

	<select id="selectAll" resultType="Note">
		select * from note
	</select>

	<select id="select" parameterType="int" resultType="Note">
		select * from note where note_id=#{note_id}
	</select>
	
	<insert id="insert" parameterType="Note">
		insert into note(note_id, note_name, note_img) values(#{note_id}, #{note_name}, #{note_img})
	</insert>
	
	<update id="update" parameterType="Note">
		update note set note_name=#{note_name}, note_img=#{note_img}
		where note_id=#{note_id}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from note where note_id=#{note_id}
	</delete>
	
</mapper>